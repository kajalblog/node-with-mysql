<body>
    <!-- <h1>Hello, world!</h1> -->
    <div class="container">
        <% users.forEach(function(user){%>
            <%=user.user_id%>
                <form action="/update/<%=user.user_id%>" method="POST" autocomplete="off">
                    <div class="form-group">
                        <label>User Name</label>
                        <%=user.user_name%>
                            <input type="text" name="name" class="form-ontrol" value="<%=user.user_name%>">
                    </div>
                    <div class="form-group">
                        <label>User Email</label>
                        <input type="email" name="email" class="form-ontrol" value="<%=user.user_email%>">
                    </div>
                    <div class="form-group">
                        <label>User Password</label>
                        <input type="password" name="password" class="form-ontrol" value="<%=user.user_password%>">
                    </div>
                    <button type="submit" value="update" name="update" class="btn btn-sucess">Submit</button>
                </form>
                <%})%>
    </div>

