<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container py-4 ">
        <table class="table table-bordered table-border text-center shadow">
            <tr>
                <th>user ID</th>
                <th>user Name</th>
                <th>user Email</th>
                <th>user Password</th>
                <th>User Delete</th>
                <th>User Edit</th>
            </tr>
            <tr>
                <% users.forEach(function(user){%>
                    <td>
                        <%=user.user_id%>
                    </td>
                    <td>
                        <%=user.user_name%>
                    </td>
                    <td>
                        <%=user.user_email%>
                    </td>
                    <td>
                        <%=user.user_password%>
                    </td>
                    <td><a href="/delete/<%=user.user_id%>" class="btn btn-danger btn-sm">Delete</a></td>
                    <td><a href="/edit/<%=user.user_id%>" class="btn btn-success btn-sm">Edit</a></td>
            </tr>
            <%})%>
        </table>
    </div>

</body>

</html>